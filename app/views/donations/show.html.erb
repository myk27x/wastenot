<script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<div style='width: 100%;'>
  <div id="map" style='width: auto; height: 400px;'></div>
</div>

<script>
  $(document).ready(function(){
    $('#accept').click(function(){
        $('#button_pocket').hide().after('<%= escape_javascript render("accepted_by") %>');
      })
    $('#decline').click(function(){
        $('#container').hide().after('<%= escape_javascript render("declined") %>');
      })
    });

    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @mapping.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
    });
</script>

<br>
<div id="container">
  <div id="instructions">
    <div>Special Instructions from: <strong><%= @donations[0].donor.org_name %></strong></div>
    <p><%= @donations[0].instructions%></p>
    <p>Contact <%= @donations[0].donor.contact_name%> at <%= @donations[0].donor.phone%> with any questions.</p>
  </div>
  <div id="button_pocket">
    <div class="spacer"></div>
    <a href="#" class="button" id="accept">
      Take this pick-up?
    </a>
    <div class="spacer_gap">
      <p>or</p>
    </div>
    <a href="#" class="button" id="decline">
      Maybe next time...?
    </a>
    <div class="spacer"></div>
  </div>
</div>
